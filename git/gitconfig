[core]
    editor = vim
[push]
    default = simple
[pull]
    rebase = true
[color]
    status = auto
    branch = auto
    diff = true
    ui = true
[log]
    decorate = true
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    st = status -s
